# Development Dockerfile with hot reload support

FROM node:20-slim

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9.15.4 --activate

# Copy package files
COPY package.json pnpm-lock.yaml .npmrc ./

# Install dependencies
RUN pnpm install

# Copy application files
COPY . .

EXPOSE 3000

CMD ["pnpm", "dev"]

